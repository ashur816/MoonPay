<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.martin.dao.IUserMapper">
    <sql id="baseSql">
        user_id, user_name, user_channel, thd_id, create_time, update_time
    </sql>
    <insert id="addUser" parameterType="com.martin.bean.UserBean">
        INSERT INTO m_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            user_name,
            user_channel,
            create_time,
            <if test="thdId!=null and thdId!=0">
                thd_id,
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{userName},
            #{userChannel},
            #{createTime},
            <if test="thdId!=null and thdId!=0">
                #{thdId},
            </if>
        </trim>
    </insert>
    <select id="getUserByThdId" resultType="com.martin.bean.UserBean">
        SELECT
        <include refid="baseSql"></include>
        FROM m_user WHERE thd_id=#{thdId}
    </select>
</mapper>