<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.martin.dao.PayFlowMapper">
    <sql id="baseSql">
      flow_id,biz_id,biz_type,thd_flow_id,pay_type,notify_url,return_url,total_amount,pay_amount,create_time,pay_time,state,pay_state,fail_code,fail_desc
    </sql>
    <select id="selectPayFlowByBiz" resultType="com.martin.bean.PayFlowBean">
        select
        <include refid="baseSql"/>
        from pay_flow WHERE biz_id=#{bizId};
    </select>
</mapper>