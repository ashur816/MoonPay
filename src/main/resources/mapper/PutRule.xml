<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.martin.dao.PutRuleMapper">
    <sql id="baseSql">
        rule_id,policy_id,face_value,total_amount,initial_amount,received_amount,used_amount,expired_amount
    </sql>
    <select id="selectPutRuleByPolicy" resultType="com.martin.bean.PutRuleBean">
        select
        <include refid="baseSql"/>
        from m_put_rule WHERE policy_id=#{policyId};
    </select>
</mapper>